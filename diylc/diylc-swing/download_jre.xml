		<!-- Move extracted folder into AppImage location -->
		<mkdir dir="${appdir.jre}" />
		<move todir="${appdir.jre}">
            <fileset dir="${jre.dest.linux}/jdk-${jdk.version}-jre" />
        </move>

		<echo message="JRE 17 bundled into ${appdir.jre}" />
